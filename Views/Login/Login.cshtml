@model Account_Payable_Application.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Login/PageLayout1.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>

<body>
    <div class="container" style="margin: auto; width: 50%; padding: 100px; display:block; top: auto">
        <form method="post">
            <fieldset>

                <legend>Login</legend>

                <br />

                <div class="form-group row">

                </div>

                <div class="form-group">

                    @Html.LabelFor(model => model.Email, "Email", new { @class = "control-label col-md-5" })
                    <input type="email" class="form-control" name="Email" placeholder="Enter email">

                </div>

                <br />

                <div class="form-group">

                    @Html.LabelFor(model => model.Pass, "Password", new { @class = "control-label col-md-5" })
                    <input type="password" class="form-control" name="Pass" placeholder="Password">
                </div>
                <br />
                <div>
                    <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
                </div>

            </fieldset>
        </form>
    </div>


</body>
</html>




